

<!-- The Modal -->
<div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
    
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Block and Unblock users</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
    
                <!-- Modal body -->
                <div class="modal-body">
                    <p>You want to block/Unlock the user</p>
                </div>
    
                <!-- Modal footer -->
                <div class="modal-footer">
                    <form method="post" action="/admin/blocked">
                        <!-- <h5>User with respective id  will not be able to login again</h5><br> -->
                        <input type="hidden" id="divx" value="" name="hiddenx">
                        <input type="hidden" id="divy" value="" name="hiddeny">
    
    
                        <input type="submit" name="submit" value="Confirm" class="btn btn-secondary">
    
                        <input type="button" data-dismiss="modal" value="Close" class="btn btn-primary">
    
    
                    </form>
                </div>
    
            </div>
        </div>
    </div>
    
    
    <script>
        function block(x, y) {
            document.getElementById('divx').value = x;
            document.getElementById('divy').value = y;

        }
    </script>