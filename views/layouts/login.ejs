<% include ../index.ejs %>
<main role="main" class="container-fluid h-100 bg-light text-dark">
    <div class="row justify-content-center align-items-center">
        <div class="my-0 p-3 bg-black rounded shadow-sm login-box">
           
            <div class="d-flex align-items-center my-3 text-white-50 bg-purple rounded shadow-sm">

                <h2>Login here</h2>

            </div>


            <!-- FORM -->
            <form class="pt-3" action="/users/user_login" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" class="form-control" id="username"
                        placeholder="Enter unique uername">
                </div>

                <!-- PASSWORD -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password"
                        placeholder="Enter password">
                </div>


                <!-- REMEMBER ME -->
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Remember me
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Login </button> || <span><a href="/"> home</a></span>
            </form>


            <!-- END FORM -->
        </div>
    </div>

</main>


<% include ../include/footer %>